    artAttrPaintOperation artAttrSkinPaintCtx Add;
    artAttrSkinPaintCtx -e -opacity 0.01 `currentCtx`;
    artSkinSetSelectionValue 1 false artAttrSkinPaintCtx artAttrSkin;

}

