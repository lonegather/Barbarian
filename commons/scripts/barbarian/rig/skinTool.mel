global proc smoothSkin(){
    
    artAttrPaintOperation artAttrSkinPaintCtx Smooth;
artAttrSkinPaintCtx -e -opacity 1 `currentCtx`;
toolPropertyShow;
artAttrSkinPaintCtx -e -clear `currentCtx`;
    
}

